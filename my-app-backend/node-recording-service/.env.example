# Node Recording Service Configuration

# Server
NODE_ENV=development
PORT=3000

# Database
DATABASE_URL=postgresql://appuser:apppassword@localhost:5432/myapp_db
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# Redis Cache
REDIS_URL=redis://localhost:6379
REDIS_DB=0

# JWT
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRATION=86400000

# Logging
LOG_LEVEL=debug

# Service Discovery
SERVICE_NAME=node-recording-service
SERVICE_VERSION=1.0.0

# Recording Service Specific
MAX_RECORDING_DURATION=3600000
RECORDING_CHUNK_SIZE=65536
TEMP_STORAGE_PATH=/tmp/recordings

# CORS
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Performance
REQUEST_TIMEOUT=30000
BODY_SIZE_LIMIT=50mb
